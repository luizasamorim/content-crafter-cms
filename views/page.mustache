<!doctype html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>ContentCrafter</title>
    <link rel="icon" type="image/png" href="https://raw.githubusercontent.com/luizasamorim/arquitetura/f3fe1617e74846de5e621e31297abd4bbfbe6110/contentCrafterIconTransparent.png">
    
    <link rel="stylesheet" href="../public/stylesheets/style.css">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/e3b211564a.js" crossorigin="anonymous"></script>
  </head>
  <body>
    <nav class="navbar bg-warning"> {{!fixed-top}} 
        <div class="container-fluid col-md-10">
            <a class="navbar-brand">
                <img src="https://raw.githubusercontent.com/luizasamorim/arquitetura/f3fe1617e74846de5e621e31297abd4bbfbe6110/contentCrafterIconTransparent.png" width="50" height="50">
            </a>
            <span class="navbar-brand mb-0 h1">ContentCrafter</span>
            {{#logged}}
              <form action="" method="">
                <button class="btn btn-outline-dark" type="submit">Logout</button>
              </form>
            {{/logged}}
            {{^logged}}
              <form action="" method="">
                <button class="btn btn-outline-dark" type="submit">Login</button>
              </form>
            {{/logged}}
        </div>
    </nav>

    <div class="container-fluid col-md-8 mt-5">
    {{#data}}
      <h1 class="mb-5">{{title}}</h1>
      <p class="text-start">{{content}}</p>
      <p>Criada em: {{date}}</p>
    {{/data}}
    </div>

    <div class="container-fluid col-md-10 fixed-bottom">
      <div class="d-flex justify-content-end mb-5">
        <a href="/create" class="btn btn-warning rounded-circle">
        <i class="fa-solid fa-plus fa-2xl py-3"></i>
        </a>
      </div>
    </div>
  
  
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>